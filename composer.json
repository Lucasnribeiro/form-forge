{
    "name": "lucasnribeiro/form-forge",
    "description": "A small performatic form library for PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lucasnribeiro\\FormForge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lucasnribeiro\\FormForge\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Lucas",
            "email": "lucasmnribeiro@gmail.com",
            "homepage": "https://lucasnribeiro.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5 || ^7.0 || ^8.0 || ^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -l max src tests"
    }
    
}
